<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:gravity="center">

    <ImageView
        android:layout_marginBottom="20dp"
        android:id="@+id/logo"
        android:src="@drawable/firebaselogo"
        android:layout_width="175dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:backgroundTint="#BEC3C5"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/logo"
        android:id="@+id/lgnemail"
        android:textColorHint="#ffcb2f"
        android:textColor="@color/colorAccent"
        android:hint="E-Mail"
        android:textAlignment="center"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:inputType="textEmailAddress"
        android:textSize="12sp"
        android:drawableLeft="@drawable/ic_person_black_24dp"/>

    <EditText
        android:backgroundTint="#BEC3C5"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/lgnemail"
        android:id="@+id/lgnpassword"
        android:textColorHint="#ffcb2f"
        android:textColor="@color/colorAccent"
        android:hint="Password"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:textSize="12sp"
        android:drawableLeft="@drawable/ic_lock_outline_black_24dp"/>

    <Button
        android:layout_marginTop="75dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/btnlogin"
        android:layout_below="@+id/lgnpassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="LOG IN"
        android:background="@drawable/mybutton"
        android:textColor="#FFF" />

    <Button
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/btnregister"
        android:layout_below="@+id/btnlogin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Register"
        android:background="@drawable/mysecondbutton"
        android:textColor="#FFF" />

</RelativeLayout>